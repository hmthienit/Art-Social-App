<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_sale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardElevation="@dimen/margin_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.grocerymanagement.customfonts.MyTextViewOleoScriptBold
                android:id="@+id/tv_category_id"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_24sp"
                android:minWidth="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="match_parent"
                android:text="1" />

            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/tv_category_id"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <com.example.grocerymanagement.customfonts.MyTextViewSansBold
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thuc pham bo sung"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />


                <com.example.grocerymanagement.customfonts.MyTextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textColor="@color/background_color"
                    android:text="@string/text_enabled" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>